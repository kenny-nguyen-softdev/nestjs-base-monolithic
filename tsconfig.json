{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,      // Set to true to enable strict null checks
    "noImplicitAny": true,         // Set to true to avoid implicitly 'any' types
    "strictBindCallApply": true,   // Set to true to enable strict checking of function calls
    "forceConsistentCasingInFileNames": true,  // Set to true to force case sensitivity in file names
    "noFallthroughCasesInSwitch": true,  // Set to true to prevent fallthrough cases in switch statements
    "paths": {
      "src": ["./src"]
    },
  },
  "exclude": ["node_modules"],  // Exclude node_modules from the compilation
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "scripts"
  ], // Include all TypeScript files under src directory
}
